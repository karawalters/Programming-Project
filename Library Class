
package Library;

import java.io.File;
import java.io.FileWriter;
import java.util.Scanner;

/**
 *
 * @author 13175
 */
public class library {
    
     // Reference to refer to list of books and accounts.
    private final List<Book> books;
    private final List<Account> accounts;
 
    // Constructor of this class
    public Library(List<Book> books,List<Account> accounts)
    {
 
        // This keyword refers to current instance itself
        this.books = books;
        this.accounts = accounts;
        
    }
 
    // Method of this class
    // Getting the list of books
    public List<Book> getListOfBooksInLibrary()
    {
        return books;
    }
    // Getting the list of accounts
    public List<Account> getListOfAccountsInLibrary()
    {
        return accounts;
    }    
    public void read(String filename)
    {
        File f = new File(filename);
        try (Scanner scan = new Scanner(f))
        {
            books = scan.nextLine();
            accounts = scan.nextLine();
          
            
        }
        catch (Exception e)
        {
            e.printStackTrace();
        }    
           
    }   
    public void read(Scanner scan)
    { 
          if (scan.hasNext())
          {
          books = scan.nextLine();
          accounts = scan.nextLine();
          
          }
    } 
    public void write(String filename)
    {
        try (FileWriter f = new FileWriter(filename))
        {
            f.write(accounts + "\n" + books + "\n");
        }
        catch (Exception e)
        {
            e.printStackTrace();
        }    
             
    }
    public void write(FileWriter f)
    {
        try
        {
            f.write(accounts + "\n" + books + "\n");   
        }
     catch (Exception e)
        {
            e.printStackTrace();
        } 
    }
    
} 


    

